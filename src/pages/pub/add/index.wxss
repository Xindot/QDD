.triptype-one {
  display: inline-block;
  width: 50%;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #666;
}
.triptype-one.selected {
  border-bottom: solid 2px #000;
  color: #000;
  font-weight: 600;
}

.point-one {
  padding:5px;
  background-color:#eee;
}
.point-one + .point-one {
  border-top: dashed 1px #dfdfdf;
}

.dis-AB {
  padding:5px;
  background-color:#eee;
  border-top:dashed 1px #dfdfdf;
}

.pf-person {
  padding:5px;
  background-color:#eee;
  margin-top:10px;
}
.pf-person-one {
  font-size:18px;
  margin-right:10px;
  padding:0 15px;
  border:solid 1px #4a4c5b;
  border-radius: 3px;
  opacity: .2;
}
.pf-person-one.selected {
  opacity: 1;
  background-color: #4a4c5b;
  color: #fff;
}

.picker-2 {
  font-size:16px;
  background-color:#eee;
  margin-top:10px;
}
.picker-one {
  display: inline-block;
  width: 50%;
  box-sizing:border-box;
  padding:5px;
  vertical-align:top;
}
.picker-one + .picker-one {
  border-left: dashed 1px #dfdfdf;
}


.pub-submit-btn {
  text-align:center;
  background-color:#4a4c5b;
  color:#fff;
  height:50px;
  line-height:50px;
  margin-top:10px;
}