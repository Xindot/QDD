<view class="pub-box">
	<view>
    <view style="background-color:#fff;padding:10px;font-size:15px;">

      <view class="trip-type-2">
        <view wx:for="{{tripTypes}}" wx:key="{{index}}" class="triptype-one {{pubForm.tripType===index?'selected':''}}" data-idx="{{index}}" bindtap="selectTripType">
          <text>{{item.label}}</text>
        </view>
      </view>

      <view class="point-2">
        <view wx:for="{{pointList}}" wx:key="{{index}}" class="point-one" data-sign="{{item.sign}}" bindtap="getPoint">
          <view wx:if="{{item.point.name}}" style="color:#666;font-size:14px;">
            <text>{{item.label}}</text>
          </view>
          <view wx:if="{{item.point.name}}">
            <view class="ellipsis" style="font-size:18px;">
              <text>{{item.point.ssx}}·</text>
              <text>{{item.point.name}}</text>
            </view>
            <view class="ellipsis" style="color:#666;font-size:12px;">
              <text>{{item.point.address}}</text>
            </view>
          </view>
          <view wx:if="{{!item.point.name}}" style="font-size:18px;color:#666;padding:15px;">
            <text>{{item.placeholder}}</text>  
          </view>
        </view>
      </view>

      <view class="dis-AB" wx:if="{{disABShow.num>0}}">
        <view style="color:#666;font-size:12px;">
          <text>距离约</text>
          <text style="color:#000;font-size:15px;">{{disABShow.num}}</text>
          <text>{{disABShow.unit}}</text>
          <text style="color:red;font-size:10px;" wx:if="{{pubForm.disAB>0&&pubForm.disAB<(5*1000)}}">「暂不支持小于5km的搭车」</text>
        </view>
      </view>

      <view class="picker-2">
        <picker class="picker-one" wx:for="{{pickerList}}" wx:key="{{index}}" mode="{{item.mode}}" value="{{item.value}}" start="{{item.start}}" end="{{item.end}}" data-mode="{{item.mode}}" bindchange="bindPickerChange">
          <view wx:if="{{item.value}}">
            <view style="color:#666;font-size:14px;">
              <text>{{item.label}}</text>
            </view>
            <view style="font-size:18px;">
              <text>{{item.value}}</text>                
            </view>
          </view>
          <view wx:if="{{!item.value}}" style="font-size:18px;padding:15px;color:#666;">
            <text>{{item.placeholder}}</text>
          </view>
        </picker>
      </view>

      <view wx:if="{{!remarkInputFocus}}" class="pf-person">
        <view style="color:#666;font-size:14px;">
          <text>{{tripTypes[pubForm.tripType].person}}</text>          
        </view>
        <view style="padding:5px 0;">
          <text wx:for="{{[1,2,3,4]}}" class="pf-person-one {{pubForm.tripPerson==item?'selected':''}}" wx:key="{{index}}" data-idx="{{item}}" bindtap="selectTripPerson">{{item}}</text>
        </view>
      </view>

      <view class="pf-remark">
        <view wx:if="{{pubForm.remark}}" style="color:#666;font-size:14px;">
          <text>备注</text>
          <text wx:if="{{pubForm.remark.length>30}}" style="font-size:10px;">「{{pubForm.remark.length}}/最多40字」</text>
        </view>
        <textarea bindinput="remarkChange" value="{{pubForm.remark}}" auto-height placeholder="备注说点啥" maxlength="40" bindfocus="remarkFocus" bindblur="remarkBlur" bindconfirm="remarkBlur" class="{{pubForm.remark?'':'empty'}}"/>
      </view>

    </view>

	  <view wx:if="{{!remarkInputFocus}}" class="pub-submit-btn" bindtap="pubSubmit">
      <text style="{{submitBtn.clickable?'':'opacity:.5'}}">{{submitBtn.tips}}</text>
    </view>

	  <view wx:if="{{pid&&!remarkInputFocus}}" class="del-btn" id="{{pid}}" bindtap="pubDel">
      <text style="{{submitBtn.clickable?'':'opacity:.5'}}">{{submitBtn.del}}</text>
    </view>

	</view>
</view>