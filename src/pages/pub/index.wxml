
<view class="pub-box">
  <!-- 正文 -->
  <view class="content">

    <view wx:if="{{myPubList}}">
      <view wx:for="{{myPubList}}" wx:key="{{index}}" class="my-trip-one {{selectMyPubIndex==index?'selected':''}}" style="width:{{100/myPubList.length}}%;" data-idx="{{index}}" bindtap="selectOnePub">
        <view class="ellipsis">
          <text>{{item.pointA.ssx}}</text>
          <view style="font-size:0;color:#666;display:inline-block;margin:0 1px;">
            <view>
              <image src="../../images/common/{{item.tripType==1?'car':'person'}}.png" style="width:12px;vertical-align:-2px;" mode="widthFix"></image>
              <text style="font-size:10px;">{{item.tripPerson}}</text>
            </view>
            <view>
              <image src="../../images/common/go.png" style="width:18px" mode="widthFix"></image>          
            </view>
          </view>
          <text>{{item.pointB.ssx}}</text>
        </view>
        <view class="ellipsis" style="font-size:10px;color:#666;">
          <text>{{item.tripTime}}</text>
          <text wx:if="{{item.tripTime<nowTime}}" style="color:red;">·过期</text>
        </view>
      </view>

      <view wx:if="{{myPubList.length==0}}" class="trip-new add" bindtap="pubMyTrip">
        <text>新增行程</text>
      </view>

    </view>

    <import src="../../template/tripList/index.wxml"/>
    <template is="tripList" data="{{pubList:matchPubList,tripTypes,nowTime,pageName}}"/>

  </view>
</view>







