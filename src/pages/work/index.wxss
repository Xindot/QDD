.work-box .header{
  background-color: #ffe001;
  height: 40px;
  line-height: 40px;
  width: 100%;
  text-align: center;
  font-size: 14px;
  position: fixed;
  top: 0;
  z-index: 11;
}
.work-box .header .h-text{
	margin-right: 20px;
  padding: 0 2px;
	display:inline-block;
  opacity: .5;
}
.work-box .header .work-admin{
  float: right;opacity: .5;padding: 0 15px;font-size: 12px;
  position: absolute;
  right: 0;
}
.work-box .header .h-text.active {
  box-shadow: inset 0 -2px #000, inset 0 0 #000; 
  opacity: 1;
  font-weight: 500;
}
.work-box .header .h-text.last-tab{
	margin-right: 0;
}
