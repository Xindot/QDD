  width:100%;
  box-sizing:border-box;
  height:100px;
}
/* 输入框 结束 */

/* 选择项 开始 */
.select-div {
  border-top:solid 1px #eee;
  border-bottom:solid 1px #eee;
}
.select-one {
  font-size:13px;
  height:40px;
  line-height:40px;
  padding:0 10px;
}
.select-one+.select-one{
  border-top:solid 1px #eee;
}
.select-one .right {
  float:right;
}
.select-one .right .switch {
  zoom:.7;vertical-align:3px;
}
/* 选择项 结束 */

/* 提交按钮 开始 */
.submit{
  margin: 30px 0;
  font-size:14px;
  border:none;
  text-align:center;
  background-color:#ffe001;
  border-radius:50px;
  color:#000;
  height:44px;
  line-height:44px;
}
/* 提交按钮 结束 */

/* 加号 开始 */
.img-add {
  background-color:#eee;
  color:#ccc;
  width:97%;
  height:97%;
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
}
.img-add::before{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 40px;
  margin-left: -20px;
  margin-top: -2px;
  border-top: 4px solid;
}
.img-add::after {
 content: '';
 position: absolute;
 left: 50%;
 top: 50%;
 height: 40px;
 margin-top: -20px;
 margin-left: -2px;
 border-left: 4px solid;
}
/* 加号 结束 */
