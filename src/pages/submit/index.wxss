page {
	background-color: #fff;
}

/* 作业提交 开始 */
.work-submit-box {
	width: 100%;
	padding: 0 15px;
	box-sizing: border-box;
}
/* 作业提交结束 */

/* 头部提示 开始 */
.tips-1 {
	text-align: left;	
  opacity:.5;
	font-size: 12px;
  padding:5px 1%;
}
.tips-1 .right {
  float:right;
}
/* 头部提示 结束 */

/* 图片添加 开始 */
.wsb-img {
  font-size: 0;
}
.img-div {
  width: 33.33%;
  padding-bottom: 33.33%;
  overflow: hidden;
  display: inline-block;
  position: relative;
}
.img-div .img {
  width:97%;
  height:97%;
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
}
.img-add-div {
  width:33.33%;
  padding-bottom:33.33%;
  position:relative;
  display:inline-block;
  vertical-align:top;
}
.del-img {
  position:absolute;
  font-size:12px;
  width:100%;
  background-color:rgba(255,255,255,.8);
  text-align:center;
  bottom:0;
  padding:5px 0;
  color:red;
}
/* 图片添加 结束 */

/* 输入框 开始 */
