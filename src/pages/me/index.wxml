<view class="me-box">
	<view style="text-align:center;padding:10px 0;" data-text="微信登录" bindtap="goPage">
    <view class="flex-item flex-item-1">
      <image wx:if="{{WXUserInfo.avatarUrl}}" style="width: 50px; height: 50px;font-size: 0;border-radius: 50px;vertical-align:middle;" src="{{WXUserInfo.avatarUrl}}"></image>
    </view>
    <view class="flex-item flex-item-2">
      <view class="flex-item-one">
        <text>{{WXUserInfo.nickName}}</text>
      </view>
      <view class="flex-item-one" style="opacity: .5;font-size: 12px;">
        <text>{{WXUserInfo.city}}</text>
      </view>
    </view>
    <!-- <view class="flex-item flex-item-1">
      <text>代表作</text>
    </view> -->
	</view>

  <view class="h-10px"></view>

  <view class="my-list-1">
    <view wx:for="{{list1}}" wx:key="{{index}}" data-text="{{item}}" bindtap="goPage" class="flex-item">
      <view>
        <image style="width: 30px; height: 30px;font-size: 0;" src="../../images/common/me-list-1-{{index}}.png"></image>
      </view>
      <view>
        <text>{{item}}</text>
      </view>
    </view>
  </view>

  <view class="h-10px"></view>

  <view class="my-list-2">
    <view wx:for="{{list2}}" wx:key="{{index}}" data-text="{{item}}" bindtap="goPage" class="flex-item">
      <image style="width: 16px; height: 16px;font-size: 0;" src="../../images/common/me-list-2-{{index}}.png" class="img"></image>
      <text style="margin-left: 10px;">{{item}}</text>
      <view style="clear: both; float: right; margin-right: 10px;">
        <image style="width: 24px; height: 24px;font-size: 0;" src="../../images/common/right-icon.png" class="img"></image>
      </view>
    </view>
  </view>

  <view class="version">{{version}}</view>
</view>