/* 头部 开始 */
.myWork-h-tabs {
	font-size: 14px;
  background-color: #eee;
}
.myWork-h-tab-one {
	display: inline-block;
  text-align: center;
  height: 44px;
  line-height: 44px;
  opacity: .5;
}
.myWork-h-tab-one.active {
  opacity: 1;
}
/* 头部 结束 */

/* 列表 开始 */
.myWork-list-1-one {
  font-size: 0;
}
.myWork-list-1-one,
.myWork-list-2-one {
  background-color: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.myWork-list-1-one+.myWork-list-1-one,
.myWork-list-2-one+.myWork-list-2-one{
  border-top: solid 1px #eee;
}
.myWork-list-1-one .left {
  width: 25%;
  position: relative;
  overflow: hidden;
  padding-bottom: 25%;
  display:inline-block;
  border-radius:5px;
}
.myWork-list-1-one .left .img {
  width: 100%;
  height: 100%;
  position: absolute;
}
.myWork-list-1-one .right {
  display:inline-block;
  font-size:14px;
  vertical-align:top;
  width:75%;
  padding:0 10px;
  box-sizing:border-box;
}
.btn-original,
.btn-representative {
  background-color:#fce9e8;
  color:#d44d44;
  padding:0 5px;
  font-size:12px;
  border-radius:10px;
  margin-right:5px;
  border:1px solid #f0bab6;
  box-sizing:border-box;
  font-weight:700;
  height:20px;
  text-overflow:ellipsis;
}
.btn-viewAllow {
  background-color:#e5efff;
  color:#3965cc;
  padding:0 5px;
  font-size:12px;
  border-radius:10px;
  margin-right:5px;
  border:1px solid #93b2f7;
  box-sizing:border-box;
  font-weight:700;
  height:20px;
  text-overflow:ellipsis;
}

.myWork-list-2-one {
  font-size: 14px;
}
.myWork-list-2-one .right {
  float:right;
  opacity:.5;
}
/* 列表 结束 */


/* css 图片高度随宽度变化成正方形 开始 */
.list-img {
  width: 100%;
  position: relative;
  overflow: hidden;
  padding-bottom: 100%;
}
.list-img img {
  width: 100;
  height: 100%;
  position: absolute;
}
/* css 图片高度随宽度变化成正方形 结束 */
