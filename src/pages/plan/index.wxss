page {
	background-color:#ffe001;
	height:100%;
}

.plan-box .header{
	width: 100%;
	height: 40px;
	line-height: 40px;
	font-size: 14px;
	text-align: center;
	position: fixed;
	top: 0;
	background-color: #ffe001;
	z-index: 11;
}
.header .h-text{
	opacity: .5;
}
.header .h-text.active{
	opacity: 1;
	font-weight: 500;
}

.section .flex-wrp{
	height: 100%;
	flex-direction:column;
}

.section-now .list-none,
.section-over .list-none{
	width: 100%;
	margin-top: 150px;
	text-align: center;
	opacity: .2;
	font-size: 16px;
}
.section-now .list-none{
	opacity: 1;
}
.section-now .list-none .img{
	width: 50px;
	height: 50px;
	margin-top: 30px;
}
.section-now .list-all{
	padding:0 15px;
}
.section-now .list-all .list-one{
	background-color:#fff;
	padding:10px 15px;
	border-radius:8px;
}

.section-now .list-all .list-one-2{
	font-size: 12px;
	opacity: .5;
}

.todayDo{
	padding:10px 15px;
	font-size:15px;
 	border:solid 1px #3db034;
	color:#fff;
	text-align: center;
	background-color:#3db034;
	border-radius:100px;
	font-weight: 500;
}

.section-over .list-none .img{
	width: 80px;
	height: 80px;
}
